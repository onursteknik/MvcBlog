@model IEnumerable<MvcBlog.Models.Makale>

@{
    ViewBag.Title = "KategoriMakale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GridMvc.Html

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>

<script>
    $(function () {
        pageGrids.offresGrid.lang = GridMvc.lang.ru;
    });
</script>

<div class="col-md-8">
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Kategori.KategoriAdi).Titled("Kategori Adı").SetWidth(110).Sortable(true).Filterable(true);
    columns.Add(m => m.Baslik).Titled("Başlık").Sortable(true).Filterable(true);
    columns.Add(m => m.Tarih).Titled("Tarih").Sortable(true).Filterable(true);
    columns.Add(m => m.Okunma).Titled("Okunma").Sortable(true).Filterable(true);
}).WithPaging(10)
</div>

