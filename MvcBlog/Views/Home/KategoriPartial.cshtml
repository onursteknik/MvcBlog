<div class="panel-body">
    <div class="list-group" style="text-align:center">
        @foreach (var item in Model)
            {
            <a href="/Home/KategoriMakale/@item.KategoriID" class="list-group-item">@item.KategoriAdi (@item.Makales.Count())</a>
        }
    </div>
</div>







