@model MvcBlog.Models.Makale

@{
    ViewBag.Title = "MakaleDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tag {
        background-color: beige;
    }
</style>

<script src="~/Content/js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="~/Content/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $(".dropdown-toggle").dropdown();
    });
</script>

<div class="col-md-8">
    <!-- Title -->
    <h1>@Model.Baslik</h1>
    <!-- Author -->
    <p class="lead">
        @if (Convert.ToInt32(Session["uyeid"]) == Model.UyeID)
        {
        <img class="img-circle" width="75" src="@Model.Uye.Foto" alt="@Model.Uye.AdSoyad" /> <a href="/Uye/Index/@Model.UyeID">@Model.Uye.KullaniciAdi</a>
        }
        else
        {
        <img class="img-circle" width="75" src="@Model.Uye.Foto" alt="@Model.Uye.AdSoyad" /> <a href="/Uye/UyeProfil/@Model.UyeID">@Model.Uye.KullaniciAdi</a>
        }
    </p>
    <hr>
    <!-- Date/Time -->
    <p>
        <span class="glyphicon glyphicon-time"></span> @String.Format("{0: dd MMMM yyyy}", Model.Tarih)&nbsp;&nbsp;&nbsp;
        <span class="glyphicon glyphicon-edit"></span> @Model.Kategori.KategoriAdi (@Model.Kategori.Makales.Count())&nbsp;&nbsp;&nbsp;
        <span class="glyphicon glyphicon-comment"></span> @Model.Yorums.Count()
    </p>
    <hr>
    <!-- Preview Image -->
    <img class="img-responsive" src="@Model.Foto" alt="@Model.Baslik">
    <hr>
    <!-- Post Content -->
    <p class="lead">
        @Html.Raw(Model.Icerik)
    </p>
    <div class="panel panel-default">
        <div class="panel-heading" style="height:30px"><h4 style="margin:-1px;font-size:14px">Etiketler</h4></div>
        <div class="panel-body">
            @*@{
                string etiketler = null;
                string sonhali = null;
                foreach (var item in Model.Etikets)
                {
                    etiketler += item.EtiketAdi + " , ";
                }
                sonhali = etiketler.Substring(0, etiketler.Length - 3);
                <span class="tag">@sonhali</span>
            }*@
            @foreach (var item in Model.Etikets)
            {
            <span class="bootstrap-tagsinput">@item.EtiketAdi</span>
            }
        </div>
    </div>
    <hr>

    @if (Session["uyeid"] != null)
    {
    <div class="well">
        <h4>Yorum</h4>
        <form role="form">
            <div class="form-group">
                <textarea id="yorum" typeof="text" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" id="gonder" class="btn btn-primary">Yorum Yap</button>
        </form>
    </div>
    }
    else
    {
    <h4>Makaleye yorum yapmak için kullanıcı girişi yapmalısınız.</h4>
    <p><a href="/Uye/Login/">Üye Girişi Yap</a></p>
    }
    <hr>

    <div class="media">
        @foreach (var item in Model.Yorums.ToList())
        {
        <div class="well">
            <a class="pull-left" href="#">
                <img width="50" class="img-circle" src="@item.Uye.Foto" alt="@item.Uye.AdSoyad">
            </a>
            <div class="media-body">
                <h4 class="media-heading">
                    @item.Uye.KullaniciAdi
                    <small>@item.Tarih</small>
                </h4>
                <div style="margin:0 0 0 5px">
                    @item.Icerik - @if (Convert.ToInt32(Session["uyeid"]) == item.UyeID || Convert.ToInt32(Session["yetkiid"]) == 1)
                {
                <a class="btn btn-danger" href="/Home/YorumSil/@item.YorumID">Sil</a>
                    }
                </div>
            </div>
        </div>
        }

    </div>

</div>



<script type="text/javascript">

    $(document).ready(function(){
        $('#gonder').click(function () {
            var yorumunuz = $("#yorum").val();
            $.ajax({
                url:'/Home/YorumYap/',
                data: {yorum: yorumunuz,Makaleid:@Model.MakaleID},
                type: 'POST',
                dataType: 'json',
                success: function(data) {
                    alert("Yorumunuz Gönderildi!");}
            });
        });
    })

</script>

<script type="text/javascript">
    $(document).ready(function(){
        $('#gonder').click(function () {
            var yorumunuz = $("#yorum").val();
            if (yorumunuz.length >500){
                alert("Yorum içeriğindeki karakter sayısı 500'den fazla olmamalıdır.");}
        });
    })
</script>

<script type="text/javascript">
    $(document).ready(function(){
        $.ajax({
            url:'/Home/OkunmaArttir/',
            data:{Makaleid:@Model.MakaleID},
            type:'POST'
        });
    })

</script>

