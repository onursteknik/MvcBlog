<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>MVC BLOG</title>
    <link rel="shortcut icon" href="~/Uploads/Foto/icon.jpg">
    <!-- Bootstrap Core CSS -->
    @*<link href="~/Content/css/bootstrap.min.css" rel="stylesheet">*@

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery -->
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap-tagsinput-angular.js"></script>
    <script src="~/Content/js/bootstrap-tagsinput.js"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" src="~/Content/css/bootstrap.css" />
    <link href="~/Content/css/bootstrap-tagsinput.css" rel="stylesheet" />
    @*<link href="@Url.Content("~/Content/css/blog-home.css")" rel="stylesheet">*@
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    @*<script>
        $(function () {
            pageGrids.offresGrid.lang = GridMvc.lang.ru;
        });
    </script>*@
</head>
<body style="overflow-x: hidden;">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse" style="background-color:#003F90" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a style="color:white" class="navbar-brand" href="/Home/Index/">MVC Blog</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" style="color:white" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a style="color:white" href="/Home/Hakkimda/">Hakkımda</a>
                    </li>
                    <li>
                        <a style="color:white" href="#">Servisler</a>
                    </li>
                    <li>
                        <a style="color:white" href="/Home/Iletisim/">İletişim</a>
                    </li>
                </ul>


                <ul class="nav navbar-nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i>
                            @if (Session["uyeid"] != null)
                            {
                            @Session["kullaniciadi"].ToString()
                            }
                            else
                            {
                            <span style="color:white">Menü</span>
                            }
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @if (Session["uyeid"] != null)
                            {
                            <li>
                                <a href="/Uye/Index/@Session["uyeid"]" class="fa fa-user">Profil</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                            </li>
                                if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                <li>
                                    <a href="/Admin/Index/" target="_blank"><i class="fa fa-fw fa-gear"></i> Admin Paneli</a>
                                </li>
                                }
                                <li class="divider"></li>
                                <li>
                                    <a href="/Uye/Logout/"><i class="fa fa-fw fa-power-off"></i> Çıkış</a>
                                </li>
                            }
                            else
                            {
                            <li>
                                <a href="/Uye/Login/">Üye Girişi</a>
                            </li>
                            <li>
                                <a href="/Uye/Create/">Üye Ol</a>
                            </li>
                            }
                        </ul>
                    </li>
                </ul>


            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->

            @RenderBody()

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <div class="panel panel-default">
                    <div class="panel-heading" style="text-align:center;height:40px;">
                        <h4  style="margin:0"><span>Sosyal Medya</span></h4>
                    </div>
                    <div class="panel-body">
                        <div style="float:left;margin:0 auto;text-align:center;align-items:center;width:100%">
                            <a href="http://www.facebook.com" target="_blank"><img src="~/Uploads/SosyalMedya/face.png" alt="Onur Facebook" /></a>
                            <a href="http://www.twitter.com/onurssaral" target="_blank"><img src="~/Uploads/SosyalMedya/twt.png" alt="Onur Twitter" /></a>
                            <a href="http://www.instagram.com/onursssaral" target="_blank"><img src="~/Uploads/SosyalMedya/inst.png" alt="Onur Instagram" /></a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    @Html.Partial("BlogAraPartial")
                    <!-- /.input-group -->
                </div>
                <!-- Blog Categories Well -->
                <div class="panel panel-default">
                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                </div>
                <div class="panel panel-default">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>
                <div class="panel panel-default">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }
                </div>

                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- Side Widget Well -->

    </div>

    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12" style="text-align:center">
                <p>Copyright &copy; @DateTime.Now.Year</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>

    <!-- /.container -->

</body>
</html>
